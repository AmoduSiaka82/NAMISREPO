@model IEnumerable<NAMIS.Models.designation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Decoration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cadre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptID)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Decoration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cadre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignationID">Details</a> |
