@model IEnumerable<NAMIS.Models.Visitor>
<div class="row">

    <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
        <div class="table-responsive">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.VisitorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PurposeOfVisit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WhoToVisit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DidKnow)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.TimeOfVisit)
                        </th>

                        <th>
                    
                            <a onclick="showInPopup('@Url.Action("CreateEdit","Visitors",new {id=0},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Visitor</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisitorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurposeOfVisit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WhoToVisit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DidKnow)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.TimeOfVisit)
                            </td>


                            <td>

                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                                <a onclick="showInPopup('@Url.Action("CreateEdit","Visitors",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                <div style="display:none">
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                        <input type="hidden" asp-for="@item.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                    </form>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>