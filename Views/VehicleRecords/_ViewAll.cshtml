@model IEnumerable<NAMIS.Models.VehicleRecord>


<div class="row">

    <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
        <h6 class="text-center"><i class="fas fa-comments-dollar text-success"></i> Vehicle Record</h6>
        <div class="table-responsive">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.VehicleNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TankCapacity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Make)
                        </th>
                        <th>
                
                            <a onclick="showInPopup('@Url.Action("CreateEdit","VehicleRecords",new {id=0},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Record</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.VehicleNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TankCapacity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Make)
                            </td>
                            <td>
                                
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                
                                    <a onclick="showInPopup('@Url.Action("CreateEdit","VehicleRecords",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    <div style="display:none">
                                        <form  asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                            <input type="hidden" asp-for="@item.Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>