                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BasicSalaryPA" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        ₦
                                    </div>
                                </div>
                                <input asp-for="BasicSalaryPA" class="form-control" />
                            </div>
                            
