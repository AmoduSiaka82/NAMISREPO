                            <span asp-validation-for="IncriminisDateYr" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Authority" class="control-label"></label>
                    <input asp-for="Authority" class="form-control" />
                    <span asp-validation-for="Authority" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Signature" class="control-label"></label>
                            <input asp-for="Signature" class="form-control" />
                            <span asp-validation-for="Signature" class="text-danger"></span>
                        </div>
                    </div>
                 
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NameAndStamp" class="control-label"></label>
                                <input asp-for="NameAndStamp" class="form-control" />
                                <span asp-validation-for="NameAndStamp" class="text-danger"></span>
                            </div>

                            </div>
                    </div>

                            <input type="hidden" asp-for="ID" />
                            <div class="form-group">
                                <div class="col-md-6 offset-md-3">
                                    <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary btn-block" />
                                </div>
                            </div>
</form>
        </div>
