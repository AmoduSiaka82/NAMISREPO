@model IEnumerable<NAMIS.Models.languages>

@{
    ViewData["Title"] = "Default";
}

<h4>Languages</h4>


<link href="~/css/viewComp.css" rel="stylesheet" />
<div class="row">

    <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
        <div class="table-responsive">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Language)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Spoken)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Written)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExamQualified)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.SprpNo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Language)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Spoken)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Written)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamQualified)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.SprpNo)
                            </td>
                            <td>
                                
                                <a asp-action="Index" asp-area="" asp-controller="languages" class="btn btn-danger btn-rounded btn-sm my-0" asp-route-id="@item.ID">Details</a> |
                               
                            </td>
                        </tr>
                    }
                </tbody>
                <tr>
                    <td colspan="5"></td>
                    <td>
                        <a asp-action="Index" asp-area="" asp-controller="languages" class="btn btn-info">Add New</a>
                    </td>

                </tr>
            </table>
        </div>
    </div>
    </div>
