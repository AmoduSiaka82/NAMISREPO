@model IEnumerable<NAMIS.Models.bytransfers>
    <p>
        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="bydeaths"><i class="fas"></i></a>

        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="rofgpms"><i class="fa"></i></a>

    </p>

<div class="row">
    <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
        <div class="table-responsive">
            <table id="myTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfTransfer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PensionOrContarct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AggregateServiceInNigeriaYrs)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AggregateServiceInNigeriaMos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AggregateServiceInNigeriaDays)
                        </th>
                        <th>
                            ₦@Html.DisplayNameFor(model => model.AggregateSalaryInNigeria)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.SprpNo)
                        </th>
                        <th>
                            <a onclick="showInPopup('@Url.Action("CreateEdit","bytransfers",new {Id=0},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Record</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfTransfer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PensionOrContarct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AggregateServiceInNigeriaYrs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AggregateServiceInNigeriaMos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AggregateServiceInNigeriaDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AggregateSalaryInNigeria)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.SprpNo)
                            </td>
                            <td>
                                <div>
                                    <a onclick="showInPopup('@Url.Action("CreateEdit","bytransfers",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    <a asp-action="Details" class="btn btn-danger btn-rounded btn-sm my-0" asp-route-id="@item.Id">Details</a> |
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                        <input type="hidden" asp-for="@item.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
