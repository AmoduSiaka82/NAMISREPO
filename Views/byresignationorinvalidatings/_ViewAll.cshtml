@model IEnumerable<NAMIS.Models.byresignationorinvalidating>
    <p>
        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="rofcandcs"><i class="fas"></i></a>

        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="bydeaths"><i class="fa"></i></a>

    </p>
    
    <div class="row">
        <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTerminated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PensionOrContarct)
                            </th>
                            <th>
                                ₦ @Html.DisplayNameFor(model => model.PensionOf)
                            </th>

                            <th>
                                ₦@Html.DisplayNameFor(model => model.GrantuityOf)
                            </th>
                            <th>
                                ₦@Html.DisplayNameFor(model => model.ContractGratuity)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.SprpNo)
                            </th>
                            <th>
                                <a onclick="showInPopup('@Url.Action("CreateEdit","byresignationorinvalidatings",new {Id=0},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Record</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTerminated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PensionOrContarct)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PensionOf)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.GrantuityOf)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContractGratuity)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SprpNo)
                                </td>
                                <td>
                                    <div>
                                        <a onclick="showInPopup('@Url.Action("CreateEdit","byresignationorinvalidatings",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                        <a asp-action="Details" class="btn btn-danger btn-rounded btn-sm my-0" asp-route-id="@item.Id">Details</a> |
                                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                            <input type="hidden" asp-for="@item.Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
