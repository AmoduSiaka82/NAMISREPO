@model NAMIS.Models.byresignationorinvalidating

@{
    Layout = null;
}




<div class="row">
    <div class="col-md-12">
        <form id="myForm" asp-action="CreateEdit"  asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTerminated" class="control-label"></label>
                <input asp-for="DateTerminated" class="form-control" />
                <span asp-validation-for="DateTerminated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PensionOrContarct" class="control-label"></label>
                
                <select asp-for="PensionOrContarct" class="form-control">

                    <option value="">---Select---</option>
                    <option value="Pension">Pension</option>
                    <option value="Contarct">Contarct</option>


                </select>
                <span asp-validation-for="PensionOrContarct" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PensionOf" class="control-label">₦</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    ₦
                                </div>
                            </div>
                            <input asp-for="PensionOf" class="form-control" />
                        </div>
                        
                        <span asp-validation-for="PensionOf" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="GrantuityOf" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    ₦
                                </div>
                            </div>
                            <input asp-for="GrantuityOf" class="form-control" />
                        </div>
                        
                        <span asp-validation-for="GrantuityOf" class="text-danger"></span>
                    </div>
                </div>
                </div>

                <div class="form-group">
                    <label asp-for="ContractGratuity" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                ₦
                            </div>
                        </div>
                        <input asp-for="ContractGratuity" class="form-control" />
                    </div>
                   
                    <span asp-validation-for="ContractGratuity" class="text-danger"></span>
                </div>


                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                </div>
</form>
    </div>
</div>

