
@model IEnumerable<NAMIS.Models.MinuteOfMeeting>
    <div class="row">
        <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MinuteNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contents)
                            </th>



                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MinuteNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contents)
                </td>



                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("CreateEdit","MinuteOfMeetings",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <a asp-action="Details" class="btn btn-danger btn-rounded btn-sm my-0" asp-route-id="@item.Id">Details</a> |
                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="hidden" asp-for="@item.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>

                        <a onclick="showInPopup('@Url.Action("Create","MinuteOfMeetings",new {id=item.MinuteID},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> Add New</a>
                    </div>
                </td>
            </tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
