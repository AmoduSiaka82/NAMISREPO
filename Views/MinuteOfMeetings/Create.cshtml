@model NAMIS.Models.MinuteOfMeeting

@{
    Layout = null;
}


<div class="row">


    <div class="col-md-12">
        <form id="myForm" asp-action="Create" asp-route-id="@Model.MinuteID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MinuteID" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MinuteNo" class="control-label"></label>
                        <input asp-for="MinuteNo" class="form-control" />
                        <span asp-validation-for="MinuteNo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>

                <textarea style="width:100%;height:25rem" asp-for="Contents" class="form-control"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>



            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" id="btnSubmit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

