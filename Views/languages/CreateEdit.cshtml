@model NAMIS.Models.languages

@{
    Layout = null;
}




<div class="row">
    <div class="col-md-12">
        <form id="myForm" asp-action="CreateEdit" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spoken" class="control-label"></label>
                

                    <select asp-for="Spoken" class="form-control">
                        <option value="">---Select---</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                        
                    </select>
                  
                <span asp-validation-for="Spoken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Written" class="control-label"></label>
                <select asp-for="Written" class="form-control">
                    <option value="">---Select---</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>

                </select>
                <span asp-validation-for="Written" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamQualified" class="control-label"></label>
                <input asp-for="ExamQualified" class="form-control" />
                <span asp-validation-for="ExamQualified" class="text-danger"></span>
            </div>


            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
