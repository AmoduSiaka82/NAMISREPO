@model NAMIS.Models.biodata

@{
    ViewData["Title"] = "ProcessDisposition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>Process Disposition</h6>


<hr />

        <form id ='myForm' asp-action="ProcessDisposition">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" readonly="readonly" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" readonly="readonly" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" readonly="readonly" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="SprpNo" />
                    <div class="form-group">
                        <label asp-for="CurrentAppointment" class="control-label"></label>
                        <input asp-for="CurrentAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="CurrentAppointment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" readonly="readonly" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfFirstAppointment" class="control-label"></label>
                        <input asp-for="DateOfFirstAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="DateOfFirstAppointment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfCurrentAppointment" class="control-label"></label>
                        <input asp-for="DateOfCurrentAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="DateOfCurrentAppointment" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">

                    <div class="form-group">
                        <label asp-for="SprpNo" class="control-label"></label>
                        <input asp-for="SprpNo" readonly="readonly" class="form-control" />
                        <span asp-validation-for="SprpNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeLevel" class="control-label"></label>
                        <input asp-for="GradeLevel" readonly="readonly" class="form-control" />
                        <span asp-validation-for="GradeLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Old Step</label>
                        <input type="number" id="OldStep" required="" name="OldStep" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">New Step</label>
                        <input asp-for="Step" required="" readonly="readonly" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Old Sal Amt</label>
                        <input type="number" id="OldSal" required="" name="OldSal" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">New Sal Amt</label>
                        <input type="number" id="NewSal" required="" name="NewSal" class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div style="display:none" class="form-group">
                        <label asp-for="StationName" class="control-label"></label>
                        <input asp-for="StationName" readonly="readonly" class="form-control" />
                        <span asp-validation-for="StationName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="CurrentAppointment" class="control-label"></label>
                        <input asp-for="CurrentAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="CurrentAppointment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> State of Origin</label>
                        <input asp-for="StateOfOrigin" readonly="readonly" class="form-control" />
                        <span asp-validation-for="StateOfOrigin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>


        <div>
            <a asp-action="Disposition">Back to List</a>
        </div>

        @section Scripts {
            <script src="~/lib/jquery/dist/jquery-1.4.1.min.js"></script>
            <script>
            $('form').submit(function () {

                $(this).find(':submit').attr('disabled', 'disabled');

            });

            </script>
            <script>
            $(function () {
                $('#btnSubmit').on('click', function () {
                    $(this).val('Please wait ...')
                        .attr('disabled', 'disabled');
                    $('#myForm').submit();
                });

            });
            </script>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
