@model NAMIS.Models.biodata

@{
    ViewData["Title"] = "Process Posting";
}

<h6>Process Posting</h6>


<hr />

        <form id="myForm" asp-action="ProcessPosting">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" readonly="readonly" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" readonly="readonly" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" readonly="readonly" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="SprpNo" />
                    <div class="form-group">
                        <label asp-for="CurrentAppointment" class="control-label"></label>
                        <input asp-for="CurrentAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="CurrentAppointment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" readonly="readonly" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfFirstAppointment" class="control-label"></label>
                        <input asp-for="DateOfFirstAppointment" readonly="readonly" class="form-control" />
                        <span asp-validation-for="DateOfFirstAppointment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmationDate" class="control-label"></label>
                        <input asp-for="ConfirmationDate" readonly="readonly" class="form-control" />
                        <span asp-validation-for="ConfirmationDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">

                    <div class="form-group">
                        <label asp-for="SprpNo" class="control-label"></label>
                        <input asp-for="SprpNo" readonly="readonly" class="form-control" />
                        <span asp-validation-for="SprpNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeLevel" class="control-label"></label>
                        <input asp-for="GradeLevel" readonly="readonly" class="form-control" />
                        <span asp-validation-for="GradeLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HighestQualification" class="control-label"></label>
                        <input asp-for="HighestQualification" readonly="readonly" class="form-control" />
                        <span asp-validation-for="HighestQualification" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StationName" class="control-label"></label>
                        <select id="StationName" name="StationName" class="form-control"
                                asp-items="@(new SelectList(@ViewBag.ListofStation, "StationName", "StationName"))">
                        </select>
                        <span asp-validation-for="StationName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <select data-val-required="Department Required" id="Department" name="Department" class="form-control"
                                asp-items="@(new SelectList(@ViewBag.ListofDept, "Department", "Department"))">
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Date of Resumption</label>
                        <input asp-for="DateOfResumetion" type="date" class="form-control" />
                        <span asp-validation-for="DateOfResumetion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>


        <div>
            <a asp-action="ConfirmationList">Back to List</a>
        </div>

        @section Scripts {
            <script src="~/lib/jquery/dist/jquery-1.4.1.min.js"></script>
            <script>
            $('form').submit(function () {

                $(this).find(':submit').attr('disabled', 'disabled');

            });

            </script>
            <script>
            $(function () {
                $('#btnSubmit').on('click', function () {
                    $(this).val('Please wait ...')
                        .attr('disabled', 'disabled');
                    $('#myForm').submit();
                });

            });
            </script>
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
