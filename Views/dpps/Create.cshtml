@model NAMIS.Models.dpps

@{
    ViewData["Title"] = "Create";
}



    <h4><b>Record Of Service </b>&nbsp;&nbsp;/&nbsp;&nbsp;Detail of previous public Service Page</h4>
<hr />
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <form id="myForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Psemployer" class="control-label"></label>
                <input asp-for="Psemployer" class="form-control" />
                <span asp-validation-for="Psemployer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrmDate" class="control-label"></label>
                <input asp-for="FrmDate" class="form-control" />
                <span asp-validation-for="FrmDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="FilePageRef" class="control-label"></label>
                <input asp-for="FilePageRef" class="form-control" />
                <span asp-validation-for="FilePageRef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkedby" class="control-label"></label>
                <input asp-for="Checkedby" class="form-control" />
                <span asp-validation-for="Checkedby" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p style="float:left"> <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" /></p>
                <p style="float:right"> <a asp-action="Create" asp-area="" asp-controller="totalpreviousservices">Skip</a></p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    
        <script src="~/lib/jquery/dist/jquery-1.4.1.min.js"></script>
        <script>
            $('form').submit(function () {

                $(this).find(':submit').attr('disabled', 'disabled');

            });

        </script>
        <script>
            $(function () {
                $('#btnSubmit').on('click', function () {
                    $(this).val('Please wait ...')
                        .attr('disabled', 'disabled');
                    $('#myForm').submit();
                });

            });
        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
