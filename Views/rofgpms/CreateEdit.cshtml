@model NAMIS.Models.rofgpm

@{
    Layout = null;
}



<form id="myForm" asp-action="CreateEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfPayment" class="control-label"></label>
                <input asp-for="DateOfPayment" class="form-control" />
                <span asp-validation-for="DateOfPayment" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FrmDate" class="control-label"></label>
                        <input asp-for="FrmDate" class="form-control" />
                        <span asp-validation-for="FrmDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ToDate" class="control-label"></label>
                        <input asp-for="ToDate" class="form-control" />
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Yrs" class="control-label"></label>
                        <input asp-for="Yrs" class="form-control" />
                        <span asp-validation-for="Yrs" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Mos" class="control-label"></label>
                        <input asp-for="Mos" class="form-control" />
                        <span asp-validation-for="Mos" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Days" class="control-label"></label>
                        <input asp-for="Days" class="form-control" />
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RatePerAnum" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                ₦
                            </div>
                        </div>
                        <input asp-for="RatePerAnum" class="form-control" />
                    </div>
                    
                    <span asp-validation-for="RatePerAnum" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AmountPaid" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                ₦
                            </div>
                        </div>
                        <input asp-for="AmountPaid" class="form-control" />
                    </div>
                    
                    <span asp-validation-for="AmountPaid" class="text-danger"></span>
                </div>
            </div>
        </div>
                <div class="form-group">
                    <label asp-for="FilePageRef" class="control-label"></label>
                    <input asp-for="FilePageRef" class="form-control" />
                    <span asp-validation-for="FilePageRef" class="text-danger"></span>
                </div>
           
           




            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </div>

        </div>
</form>
 