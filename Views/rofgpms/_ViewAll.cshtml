@model IEnumerable<NAMIS.Models.rofgpm>
    <p>
        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="bytransfers"><i class="fas"></i></a>

        <a class="btn btn-outline-success" asp-action="Index" asp-area="" asp-controller="recordofservices"><i class="fa"></i></a>

    </p>
    
    <div class="row">
        <div style="height: 100%;width: 100%;overflow-y: scroll;  overflow-x: auto" class="col-xs-12">
            <div class="table-responsive">
                <table id="myTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfPayment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FrmDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ToDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Yrs)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Days)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RatePerAnum)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AmountPaid)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FilePageRef)
                            </th>



                            <th>
                                @Html.DisplayNameFor(model => model.SprpNo)
                            </th>
                            <th>
                                <a onclick="showInPopup('@Url.Action("CreateEdit","rofgpms",new {Id=0},Context.Request.Scheme)','New Record')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Record</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOfPayment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FrmDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Yrs)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Days)
                                </td>
                                <td>
                                    ₦@Html.DisplayFor(modelItem => item.RatePerAnum)
                                </td>
                                <td>
                                    ₦ @Html.DisplayFor(modelItem => item.AmountPaid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FilePageRef)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.SprpNo)
                                </td>
                                <td>
                                    <div>
                                        <a onclick="showInPopup('@Url.Action("CreateEdit","rofgpms",new {id=item.Id},Context.Request.Scheme)','Update Record')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                                        <a asp-action="Details" class="btn btn-danger btn-rounded btn-sm my-0" asp-route-id="@item.Id">Details</a> |
                                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                            <input type="hidden" asp-for="@item.Id" />
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

