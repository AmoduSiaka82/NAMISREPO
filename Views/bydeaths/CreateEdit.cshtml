@model NAMIS.Models.bydeaths

@{
    Layout = null;
}



    <h6><b>Record Of Service </b>&nbsp;&nbsp;/&nbsp;&nbsp;By Death Page</h6>

<div class="row">
    <div class="col-md-12" >
        <form id="myForm" asp-action="CreateEdit" asp-route-id="@Model.ID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfDeath" class="control-label"></label>
                <input asp-for="DateOfDeath" class="form-control" />
                <span asp-validation-for="DateOfDeath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GratuityPaidToEstate" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            ₦
                        </div>
                    </div>
                    <input asp-for="GratuityPaidToEstate" class="form-control" />
                </div>
                
                <span asp-validation-for="GratuityPaidToEstate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WindowsPensionPaid" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            ₦
                        </div>
                    </div>
                    <input asp-for="WindowsPensionPaid" class="form-control" />
                </div>
                
                <span asp-validation-for="WindowsPensionPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrphansPensionPaid" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            ₦
                        </div>
                    </div>
                    <input asp-for="OrphansPensionPaid" class="form-control" />
                </div>
                
                <span asp-validation-for="OrphansPensionPaid" class="text-danger"></span>
            </div>


            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" id="btnSubmit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

